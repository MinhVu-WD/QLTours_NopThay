@{
    ViewBag.Title = "Thống kê số lần tham gia tour của nhân viên";
}

<h4> Thống kê các đoàn mà nhân viên đã tham gia </h4>

@using (Html.BeginForm("ThongKeNhanVien", "thongkes", FormMethod.Post, new { @id = "form1" }))
{
    <input type="datetime" name="NgayDi" placeholder="Từ ngày" />
    <input type="datetime" name="NgayVe" placeholder="Đến ngày" />
    <p class="btn btn-default btn-sm" id="add" style="border-style:ridge; border-width:1px; background-color:lightblue"> Tìm </p>
}
<br />
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên nhân viên
        </th>
        <th>
            Ngày đi
        </th>
        <th>
            Ngày về
        </th>
        <th>
            Đoàn
        </th>
    </tr>
    @{ int counter = 0;}
    @foreach (var item in (List<QLTours.Controllers.thongkesController.DSNhanVien>)ViewBag.DSNhanVien)
    {
        <tr>
            <td>
                @(++counter)
            </td>
            <td>
                @item.Nhanvien.TenNhanVien
            </td>
            <td>
                @item.NgayDi
            </td>
            <td>
                @item.NgayVe
            </td>
            <td>
                @item.IdDoan
            </td>
        </tr>
    }
</table>
<hr />
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên nhân viên
        </th>
        <th>
            Tên tài khoản
        </th>
        <th>
            Số đoàn đã tham gia
        </th>
    </tr>
    @{ int counter1 = 0;}
    @foreach (var item in (List<QLTours.Controllers.thongkesController.SoLanThamGia>)ViewBag.SoLanThamGia)
    {
        <tr>
            <td>
                @(++counter1)
            </td>
            <td>
                @item.Nhanvien.TenNhanVien
            </td>
            <td>
                @item.Nhanvien.UserName
            </td>
            <td>
                @item.SoDoan
            </td>
        </tr>
    }
</table>


@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });

        });
    </script>

    <script>
        $(function () {
            $("#add").click(function () {
                $("#form1").submit();
            });
        });
    </script>

}